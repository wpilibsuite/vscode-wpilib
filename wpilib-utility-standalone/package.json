{
  "name": "wpilib-utilities",
  "version": "0.1.0",
  "description": "WPILib Utilities written with the same code as the VSCode extension",
  "scripts": {
    "compile": "tsc -p ./",
    "clean": "rmdir-cli out",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run compile && electron ./out/main.js",
    "watch": "tsc -watch -p ./",
    "packageWindows": "electron-packager . wpilibutility --platform=win32 --arch=ia32 --overwrite --out ./build",
    "packageLinux": "electron-packager . wpilibutility --platform=linux --overwrite --out ./build",
    "packageMac": "electron-packager . wpilibutility --platform=darwin --overwrite --out ./build",
    "signMac": "electron-osx-sign build/wpilibutility-darwin-x64/wpilibutility.app --entitlements=macOS/WPILibStandaloneUtility.entitlements --entitlements-inherit=macOS/WPILibStandaloneUtility.entitlements --hardened-runtime=true --no-gatekeeper-assess"
  },
  "main": "out/main.js",
  "repository": "https://github.com/wpilibsuite/vscode-wpilib",
  "keywords": [],
  "author": "WPILib Suite",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/glob": "^7.1.2",
    "@types/mkdirp": "^1.0.1",
    "@types/ncp": "^2.0.4",
    "@types/node": "^14.0.0",
    "@types/node-fetch": "^2.5.7",
    "@types/temp": "^0.8.34",
    "@types/triple-beam": "^1.3.1",
    "electron": "^22.3.18",
    "electron-packager": "^16.0.0",
    "rmdir-cli": "^2.0.6",
    "tslint": "^6.1.3",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "glob": "^7.1.6",
    "java-properties": "^1.0.2",
    "jsonc-parser": "^2.3.1",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "node-fetch": "^2.6.1",
    "temp": "^0.9.1",
    "triple-beam": "^1.3.0",
    "winston": "^3.3.3",
    "wpilib-riolog": "^0.2.0"
  }
}
